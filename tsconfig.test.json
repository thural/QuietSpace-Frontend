{
    "extends": "./tsconfig.json",
    "compilerOptions": {
        "module": "ESNext",
        "moduleResolution": "node",
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "types": [
            "jest",
            "@jest/globals",
            "@testing-library/jest-dom",
            "@testing-library/jest-dom/extend-expect",
            "node"
        ],
        "typeRoots": [
            "./node_modules/@types",
            "./src/types",
            "./src/__mocks__"
        ],
        "jsx": "react-jsx",
        "isolatedModules": true,
        "noEmit": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true
    },
    "include": [
        "src/**/__tests__/**/*",
        "src/**/*.test.*",
        "src/**/*.spec.*",
        "test/**/*",
        "src/types/**/*.d.ts",
        "jest.setup.cjs",
        "**/*.config.ts",
        "scripts/**/*.ts"
    ],
    "exclude": [
        "node_modules",
        "dist",
        "build"
    ]
}