{
    "extends": "./tsconfig.json",
    "compilerOptions": {
        "module": "node16",
        "moduleResolution": "node16",
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "types": [
            "jest",
            "node"
        ],
        "typeRoots": [
            "./node_modules/@types",
            "./src/types",
            "./src/__mocks__"
        ]
    },
    "include": [
        "src/**/__tests__/**/*",
        "src/**/*.test.*",
        "src/**/*.spec.*",
        "test/**/*",
        "src/types/**/*.d.ts"
    ]
}