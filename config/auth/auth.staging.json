{
    "provider": "oauth",
    "defaultProvider": "oauth",
    "allowedProviders": [
        "oauth",
        "saml",
        "jwt"
    ],
    "featureFlags": {
        "mfaRequired": true,
        "encryptionEnabled": true,
        "auditEnabled": true,
        "rateLimitingEnabled": true
    },
    "token": {
        "refreshInterval": 300000,
        "expiration": 1800000,
        "maxRetries": 2
    },
    "session": {
        "timeout": 900000,
        "maxConcurrentSessions": 2
    },
    "security": {
        "maxLoginAttempts": 3,
        "lockoutDuration": 1800000,
        "rateLimitWindow": 600000,
        "rateLimitMaxAttempts": 3
    },
    "environment": {
        "name": "staging",
        "apiBaseUrl": "https://api-staging.quietspace.com",
        "debugMode": true
    },
    "logging": {
        "level": "info",
        "retentionDays": 14
    },
    "staging": {
        "mockProviders": false,
        "autoLogin": false,
        "skipMFA": false,
        "verboseLogging": true,
        "performanceMonitoring": true,
        "featureFlags": {
            "newAuthFlow": true,
            "enhancedMFA": true
        }
    },
    "oauth": {
        "google": {
            "enabled": true,
            "clientId": "${GOOGLE_CLIENT_ID}",
            "redirectUri": "https://staging.quietspace.com/auth/google/callback"
        },
        "github": {
            "enabled": true,
            "clientId": "${GITHUB_CLIENT_ID}",
            "redirectUri": "https://staging.quietspace.com/auth/github/callback"
        },
        "microsoft": {
            "enabled": true,
            "clientId": "${MICROSOFT_CLIENT_ID}",
            "redirectUri": "https://staging.quietspace.com/auth/microsoft/callback"
        }
    },
    "saml": {
        "enabled": true,
        "entryPoint": "${SAML_ENTRY_POINT}",
        "issuer": "quiet-space-staging",
        "cert": "${SAML_CERTIFICATE}",
        "privateKey": "${SAML_PRIVATE_KEY}"
    }
}