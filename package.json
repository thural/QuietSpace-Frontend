{
  "private": true,
  "type": "module",
  "name": "quiet-space",
  "version": "1.0.0",
  "description": "Social media without the distraction",
  "main": "server.js",
  "author": "thural",
  "license": "AGPL-3.0",
  "bugs": {
    "url": "https://github.com/thural/QuietSpace-Frontend/issues"
  },
  "scripts": {
    "dev": "vite --port 5000",
    "dev:web": "vite --config vite.config.web.ts --port 5000",
    "dev:mobile": "vite --config vite.config.mobile.ts --port 5001",
    "dev:desktop": "vite --config vite.config.desktop.ts --port 5002",
    "dev:server": "vite --config vite.config.server.ts --port 5003",
    "watch": "vite build --watch",
    "test": "NODE_OPTIONS=--experimental-vm-modules jest",
    "test:watch": "NODE_OPTIONS=--experimental-vm-modules jest --watch",
    "test:coverage": "NODE_OPTIONS=--experimental-vm-modules jest --coverage",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:headed": "playwright test --headed",
    "serve-json": "json-server --watch db.json --port 4000",
    "build": "tsc -b && vite build",
    "build:web": "tsc -b && vite build --config vite.config.web.ts",
    "build:mobile": "tsc -b && vite build --config vite.config.mobile.ts",
    "build:desktop": "tsc -b && vite build --config vite.config.desktop.ts",
    "build:server": "tsc -b && vite build --config vite.config.server.ts",
    "build:all": "npm run build:web && npm run build:mobile && npm run build:desktop && npm run build:server",
    "lint": "eslint .",
    "preview": "vite preview",
    "preview:web": "vite preview --config vite.config.web.ts",
    "preview:mobile": "vite preview --config vite.config.mobile.ts",
    "preview:desktop": "vite preview --config vite.config.desktop.ts",
    "preview:server": "vite preview --config vite.config.server.ts"
  },
  "dependencies": {
    "@emotion/react": "^11.14.0",
    "axios": "^1.13.2",
    "date-fns": "^4.1.0",
    "react": "19.0",
    "react-dom": "19.0",
    "react-easy-emoji": "^1.8.1",
    "react-error-boundary": "^4.1.2",
    "react-icons": "^5.0.1",
    "react-input-emoji": "^5.6.4",
    "react-router-dom": "^6.4.3",
    "reflect-metadata": "^0.2.2",
    "sockjs-client": "^1.6.1",
    "stompjs": "^2.3.3",
    "styled-components": "^6.3.8",
    "zod": "^3.23.8",
    "zod-validation-error": "^3.4.0",
    "zustand": "^4.5.2"
  },
  "devDependencies": {
    "@babel/plugin-proposal-class-properties": "^7.18.6",
    "@babel/plugin-proposal-decorators": "^7.28.6",
    "@babel/plugin-transform-class-properties": "^7.28.6",
    "@eslint/js": "^9.11.1",
    "@playwright/test": "^1.57.0",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.1.0",
    "@testing-library/user-event": "^14.5.2",
    "@types/jest": "^30.0.0",
    "@types/node": "^22.7.9",
    "@types/react": "^19.0.0",
    "@types/react-dom": "^19.0.0",
    "@types/sockjs-client": "^1.5.4",
    "@types/stompjs": "^2.3.9",
    "@types/styled-components": "^5.1.36",
    "@vitejs/plugin-react": "^4.3.2",
    "babel-plugin-styled-components": "^2.1.4",
    "eslint": "^9.11.1",
    "eslint-plugin-react-compiler": "^19.0.0-beta-37ed2a7-20241206",
    "eslint-plugin-react-hooks": "^5.1.0-rc.0",
    "eslint-plugin-react-refresh": "^0.4.12",
    "globals": "^15.9.0",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^30.2.0",
    "jest-environment-jsdom": "^29.7.0",
    "ts-jest": "^29.4.6",
    "typescript": "^5.5.3",
    "typescript-eslint": "^8.7.0",
    "vite": "^7.3.1",
    "vite-plugin-remove-console": "^2.2.0"
  }
}