{
  "private": true,
  "type": "module",
  "name": "quiet-space",
  "version": "1.0.0",
  "description": "Social media without the distraction",
  "main": "server.js",
  "author": "thural",
  "license": "AGPL-3.0",
  "bugs": {
    "url": "https://github.com/thural/QuietSpace-Frontend/issues"
  },
  "scripts": {
    "dev": "vite --port 5000",
    "dev:web": "vite --config vite.config.web.ts --port 5000",
    "dev:mobile": "vite --config vite.config.mobile.ts --port 5001",
    "dev:desktop": "vite --config vite.config.desktop.ts --port 5002",
    "dev:server": "vite --config vite.config.server.ts --port 5003",
    "watch": "vite build --watch",
    "test": "NODE_OPTIONS=--experimental-vm-modules jest",
    "test:watch": "NODE_OPTIONS=--experimental-vm-modules jest --watch",
    "test:coverage": "NODE_OPTIONS=--experimental-vm-modules jest --coverage",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:headed": "playwright test --headed",
    "serve-json": "json-server --watch development/test-data/db.json --port 4000",
    "validate:auth": "node validation/scripts/auth-system-validation.cjs",
    "validate:cache": "ts-node validation/scripts/cache-validation-test.ts",
    "validate:di": "node validation/scripts/di-validation.cjs",
    "validate:logger": "node validation/scripts/logger-system-validation.cjs",
    "validate:network": "node validation/scripts/network-validation.js",
    "validate:theme": "node validation/scripts/theme-system-validation.cjs",
    "validate:ui": "node validation/scripts/ui-library-validation.cjs",
    "validate:all": "node validation/scripts/complete-black-box-validation.cjs",
    "build": "tsc -b && vite build",
    "build:web": "tsc -b && vite build --config vite.config.web.ts",
    "build:mobile": "tsc -b && vite build --config vite.config.mobile.ts",
    "build:desktop": "tsc -b && vite build --config vite.config.desktop.ts",
    "build:server": "tsc -b && vite build --config vite.config.server.ts",
    "build:all": "npm run build:web && npm run build:mobile && npm run build:desktop && npm run build:server",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write .",
    "type-check": "tsc --noEmit",
    "pre-commit": "lint-staged",
    "preview": "vite preview",
    "preview:web": "vite preview --config vite.config.web.ts",
    "preview:mobile": "vite preview --config vite.config.mobile.ts",
    "preview:desktop": "vite preview --config vite.config.desktop.ts",
    "preview:server": "vite preview --config vite.config.server.ts",
    "prepare": "husky"
  },
  "dependencies": {
    "@emotion/react": "^11.14.0",
    "axios": "^1.13.2",
    "date-fns": "^4.1.0",
    "react": "^19.2.4",
    "react-dom": "^19.2.4",
    "react-easy-emoji": "^1.8.1",
    "react-error-boundary": "^6.1.0",
    "react-icons": "^5.0.1",
    "react-input-emoji": "^5.6.4",
    "react-router-dom": "^7.13.0",
    "reflect-metadata": "^0.2.2",
    "sockjs-client": "^1.6.1",
    "stompjs": "^2.3.3",
    "styled-components": "^6.3.8",
    "zod": "^4.3.6",
    "zod-validation-error": "^5.0.0",
    "zustand": "^5.0.10"
  },
  "devDependencies": {
    "@babel/plugin-proposal-class-properties": "^7.18.6",
    "@babel/plugin-proposal-decorators": "^7.28.6",
    "@babel/plugin-transform-class-properties": "^7.28.6",
    "@eslint/js": "^9.11.1",
    "@playwright/test": "^1.57.0",
    "@stylistic/eslint-plugin": "^5.7.1",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.1.0",
    "@testing-library/user-event": "^14.5.2",
    "@types/jest": "^30.0.0",
    "@types/node": "^22.7.9",
    "@types/react": "^19.0.0",
    "@types/react-dom": "^19.0.0",
    "@types/sockjs-client": "^1.5.4",
    "@types/stompjs": "^2.3.9",
    "@types/styled-components": "^5.1.36",
    "@vitejs/plugin-react": "^5.1.2",
    "babel-plugin-styled-components": "^2.1.4",
    "eslint": "^9.11.1",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-jsdoc": "^62.5.0",
    "eslint-plugin-react-compiler": "^19.1.0-rc.2",
    "eslint-plugin-react-hooks": "^7.0.1",
    "eslint-plugin-react-refresh": "^0.4.12",
    "globals": "^17.2.0",
    "husky": "^9.1.7",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^30.2.0",
    "jest-environment-jsdom": "^30.2.0",
    "lint-staged": "^16.2.7",
    "ts-jest": "^29.4.6",
    "typescript": "^5.5.3",
    "typescript-eslint": "^8.7.0",
    "vite": "^7.3.1",
    "vite-plugin-remove-console": "^2.2.0"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "eslint --fix",
      "prettier --write",
      "tsc --noEmit --skipLibCheck",
      "git add"
    ],
    "*.{js,jsx}": [
      "eslint --fix",
      "prettier --write",
      "git add"
    ],
    "*.{json,md,yml,yaml}": [
      "prettier --write",
      "git add"
    ]
  }
}